<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/"><%= title %></a>
        <div class="links">
          <a href="/file/new">Upload File</a>
          <a href="/logout">Logout</a>
        </div>
      </nav>
    </header>
    <main>
      <section class="folders">
        <% folders.forEach((folder) => { %>
        <div class="folder">
          <a href="/folder/<%=folder.id%>"><%= folder.name %></a>
          <a href="/folder/delete/<%= folder.id %>">Delete</a>
        </div>
        <% }) %>
      </section>
      <section class="files">
        <% files.forEach((file) => { %>
        <div class="file">
          <a href="/file/<%= file.id %>"><%= file.name %></a>
        </div>
        <% }) %>
      </section>
      <section class="opts">
        <a href="/file/new/<%= folder.id %>">Upload a file</a>
        <a href="/folder/new/<%= folder.id %>">Upload a folder</a>
      </section>
    </main>
  </body>
</html>
