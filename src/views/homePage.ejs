<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <% if (user) { %>
    <header>
      <nav>
        <a href="/"><%= title %></a>
        <div class="links">
          <a href="/file/new">Upload File</a>
          <a href="/logout">Logout</a>
        </div>
      </nav>
    </header>
    <main>
      <h1>Welcome, <%= user.name %></h1>
      <section class="folders">
        <% folders.forEach((folder) => { %>
        <div
          class="folder"
          onclick="window.location.href='/folder/<%= folder.id %>';"
        >
          <a href="/folder/<%= folder.id %>"><%= folder.name %></a>
          <div class="dropdown">
            <div class="folder-options">
              <div class="folder-option">
                <a href="/folder/delete/<%= folder.id%>">Delete</a>
              </div>
              <div class="folder-option">
                <a href="/folder/update/<%=folder.id%>">Update</a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </section>
      <section class="files">
        <% files.forEach((file) => { %>
        <div
          class="file"
          onclick="window.location.href='/file/<%= file.id %>';"
        >
          <a href="/file/<%= file.id %>"><%= file.name %></a>
          <div class="dropdown">
            <div class="file-options">
              <div class="file-option">
                <a href="/file/delete/<%= file.id %>">Delete</a>
              </div>
              <div class="file-option">
                <a href="/file/update/<%=file.id %>">Update</a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </section>
      <section class="opts">
        <a href="/file/new">Upload a file</a>
        <a href="/folder/new">Create Folder</a>
      </section>
    </main>
    <% } else { %>
    <!-- Code that should never be seen because user should be redirected to /signup instantly -->
    <header>
      <nav>
        <a href="/"> <%= title %> </a>
        <div class="links">
          <a href="/signup">Sign Up</a>
          <a href="/login">Login</a>
        </div>
      </nav>
    </header>
    <% } %>
  </body>
</html>
